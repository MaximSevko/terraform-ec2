#! /bin/bash

yum install xfsprogs -y

mkdir /home/ec2-user/disk2
mkdir /home/ec2-user/disk3

mkfs -t xfs /dev/nvme1n1
mkfs -t xfs /dev/nvme2n1

echo UUID=$(/sbin/ebsnvme-id /dev/nvme1n1 | awk '{print $3}') /home/ec2-user/disk2 xfs defaults 1 1 >> /etc/fstab
echo UUID=$(/sbin/ebsnvme-id /dev/nvme2n1 | awk '{print $3}') /home/ec2-user/disk3 xfs defaults 1 1 >> /etc/fstab

mount -a

